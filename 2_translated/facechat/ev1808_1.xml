    <Entry>
      <JapaneseText>ティア</JapaneseText>
      <EnglishText/>
      <Notes/>
      <Id>40</Id>
      <Status>To Do</Status>
    </Entry>
    <Entry>
      <JapaneseText>クラトス</JapaneseText>
      <EnglishText/>
      <Notes/>
      <Id>28</Id>
      <Status>To Do</Status>
    </Entry>
    <Entry>
      <JapaneseText>&lt;Name:82&gt;</JapaneseText>
      <EnglishText/>
